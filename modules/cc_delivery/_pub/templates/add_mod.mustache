<script id="products_table" type="text/html">
    <table class="cc-delivery-add-mod-products td-first-image" style="display:none;">
        <thead>
        <tr>
            <th>{{{image}}}</th>
            <th>{{{name}}}</th>
            <th>{{{barcode_int}}}</th>
            <th>{{{barcode}}}</th>
            <th>{{{measurement_unit}}}</th>
            <th>{{{stock}}}</th>
            <th>{{{quantity}}}</th>
            <th class="action">Remover</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</script>
<script id="products_tbody" type="text/html">
    {{#products}}
        <tr data-id="{{id}}">
            <td><img src="{{image_src}}"></td>
            <td>{{name}}</td>
            <td>{{barcode_int}}</td>
            <td>{{barcode}}</td>
            <td>{{measurement_unit}}</td>
            <td><input type="hidden" name="products[{{id}}][stock]" value="{{stock}}">{{stock}}</td>
            <td><input type="text" name="products[{{id}}][quantity]" value="{{quantity}}">
            <td>
                <a class="ui-state-default app-btn not-ajax" onclick="App.modules.cc_delivery.add_mod.cc_product_remove($(this).closest('tr'));"><span class="ui-icon ui-icon-minusthick">remove</span></a>
            </td>
        </tr>
    {{/products}}
</script>